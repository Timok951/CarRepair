<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRepair"
        xmlns:materialDesignMahApps="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="CarRepair.MainAdmin"
        mc:Ignorable="d"
        Title="MainAdmin" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="800" Height="47" TextAlignment="Center" TextWrapping="Wrap" FontSize="36" Grid.Row="0" Grid.ColumnSpan="2"><Run Language="ru-ru" Text="Администратор"/></TextBlock>

        <Button Content="Заказы"  Margin="0,0,10,10"   materialDesignMahApps:ButtonAssist.CornerRadius="0,0,0,0" Height="31" Width="209" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" x:Name="OrderButton" Click="OrderButton_Click"/>
        <Button Content="Клиенты (физ лица)" Margin="0,0,10,10"   materialDesignMahApps:ButtonAssist.CornerRadius="0,0,0,0" Height="31" Width="209" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" x:Name="ClientsBut" Click="ClientsBut_Click"/>
        <Button Content="Клиенты (юр лица)" Margin="0,0,10,10" materialDesignMahApps:ButtonAssist.CornerRadius="0,0,0,0" Height="31" Width="209" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" x:Name="СlientsBut2" Click="СlientsBut2_Click"/>
        <Button Content="Автомобили"  Margin="0,0,10,10" materialDesignMahApps:ButtonAssist.CornerRadius="0,0,0,0" Height="31" Width="209" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" x:Name="CarsBut" Click="CarsBut_Click" />
        <Button Content="История Ремонтов"  Margin="0,0,10,10"  materialDesignMahApps:ButtonAssist.CornerRadius="0,0,0,0" Height="31" Width="209" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" x:Name="RepairHistoryBut" Click="RepairHistoryBut_Click"/>
        <Button Content="Запчасти"  Margin="10,0,0,10" VerticalAlignment="Bottom"  materialDesignMahApps:ButtonAssist.CornerRadius="0,0,0,0" Height="31" Width="209" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" x:Name="PartsBut" Click="PartsBut_Click"/>
        <Button Content="СТО" Margin="10,0,0,10"  materialDesignMahApps:ButtonAssist.CornerRadius="0,0,0,0" Height="31" Width="209" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" x:Name="STOBut" Click="STOBut_Click"/>
        <Button Content="Роли" Margin="10,0,0,10"   materialDesignMahApps:ButtonAssist.CornerRadius="0,0,0,0" Height="31" Width="209" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" x:Name="RolesButton" Click="RolesButton_Click"/>
        <Button Content="Расписания сотрудников"  Margin="10,0,0,10"   materialDesignMahApps:ButtonAssist.CornerRadius="0,0,0,0" Height="31" Width="209" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" x:Name="ScheldueWorkers" Click="ScheldueWorkers_Click"/>
        <Button Content="Отчёты"  Margin="10,0,0,10"  materialDesignMahApps:ButtonAssist.CornerRadius="0,0,0,0" Height="31" Width="209" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" x:Name="Reports" Click="Reports_Click"/>
        <Button Content="Сотрудники"   materialDesignMahApps:ButtonAssist.CornerRadius="0,0,0,0" Height="31" Width="160" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Center" Grid.ColumnSpan="2" x:Name="Workers" Click="Workers_Click"/>
        <Button Content="Выйти"  Margin="10,0,0,6"   materialDesignMahApps:ButtonAssist.CornerRadius="0,0,0,0" Height="25" Width="115" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" x:Name="ExitButton" Click="ExitButton_Click"/>

    </Grid>
</Window>
