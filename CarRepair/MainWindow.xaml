<Window x:Class="CarRepair.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRepair"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="109*"/>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="142*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="Войти" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top"  materialDesign:ButtonAssist.CornerRadius="0,0,0,0" Height="31" Width="161" Grid.Row="3" Grid.Column="0" x:Name="EnterButton" Click="EnterButton_Click"/>
        <Button Content="Выйти" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"  materialDesign:ButtonAssist.CornerRadius="0,0,0,0" Height="31" Width="166" Grid.Row="3" Grid.Column="1" Click="Button_Click"/>
        <TextBox HorizontalAlignment="Left" Margin="229,0,0,18" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Bottom" Width="347" Grid.ColumnSpan="2" Grid.Row="1" Height="44" Background="#FFEDEDED" x:Name="LoginTextBox"/>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="0" Grid.ColumnSpan="2" Width="800" Height="47" TextAlignment="Center" TextWrapping="Wrap" FontSize="36"><Run Language="ru-ru" Text="Авторизация"/></TextBlock>
        <PasswordBox HorizontalAlignment="Left" Margin="229,0,0,0" Grid.Row="2" VerticalAlignment="Center" Width="347" Grid.ColumnSpan="2" Height="44" Background="#FFEDEDED"  x:Name = "PasswordTextBox"/>
        <TextBlock HorizontalAlignment="Left" Margin="229,81,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Grid.RowSpan="2" Grid.ColumnSpan="2" Height="18" Width="347"><Run Language="ru-ru" Text="Пароль"/></TextBlock>
    </Grid>
</Window>
