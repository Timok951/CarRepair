    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="0" Grid.ColumnSpan="2" Width="800" Height="47" TextAlignment="Center" TextWrapping="Wrap" FontSize="36" Margin="0,29,0,0"><Run Language="ru-ru" Text="Мастер-консультант"/></TextBlock>

        <Button Content="Заказы"  Margin="181,32,0,0" VerticalAlignment="Top"  materialDesignMahApps:ButtonAssist.CornerRadius="0,0,0,0" Height="31" Width="209" Grid.Column="0" HorizontalAlignment="Left" Grid.Row="1" Click="Button_Click_1"/>
        <Button Content="Клиенты (юр лица)" Margin="181,31,0,0" VerticalAlignment="Top"  materialDesignMahApps:ButtonAssist.CornerRadius="0,0,0,0" Height="31" Width="209" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" Click="Button_Click_4"/>
        <Button Content="Автомобили" Margin="181,31,0,0" VerticalAlignment="Top"  materialDesignMahApps:ButtonAssist.CornerRadius="0,0,0,0" Height="31" Width="209" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Left" Click="Button_Click_6"/>
        <Button Content="Клиенты (физ лица)"  Margin="10,32,0,0" VerticalAlignment="Top"  materialDesignMahApps:ButtonAssist.CornerRadius="0,0,0,0" Height="31" Width="209" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="1" Click="Button_Click_3"/>
        <Button Content="Расписания сотрудников" Margin="10,31,0,0" VerticalAlignment="Top"  materialDesignMahApps:ButtonAssist.CornerRadius="0,0,0,0" Height="31" Width="209" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Click="Button_Click_5"/>
        <Button Content="Отчёты" Margin="10,31,0,0" VerticalAlignment="Top"  materialDesignMahApps:ButtonAssist.CornerRadius="0,0,0,0" Height="31" Width="209" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" Click="Button_Click_7"/>
        <Button Content="История ремонтов"  Margin="181,32,0,0" VerticalAlignment="Top"  materialDesignMahApps:ButtonAssist.CornerRadius="0,0,0,0" Height="31" Width="209" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Left" Click="Button_Click"/>
        <Button Content="Выйти"  Margin="10,0,0,6" VerticalAlignment="Bottom"  materialDesignMahApps:ButtonAssist.CornerRadius="0,0,0,0" Height="25" Width="115" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Left" Click="Button_Click_2"/>
        <Button Content="Запчасти"  Margin="10,0,0,10" VerticalAlignment="Bottom"  materialDesignMahApps:ButtonAssist.CornerRadius="0,0,0,0" Height="31" Width="209" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" x:Name="PartsBut" Click="PartsBut_Click"/>

    </Grid>
